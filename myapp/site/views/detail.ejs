<%-include('header')%>
<link rel='stylesheet' href='/stylesheets/detail.css'>
<div class="contenedor-detail">
  <div class="detail-box1">
    <div class="div-foto"><img src="<%= result.thumbnail%>" alt=""></div>
  </div>
  <div>
    <div class="div-detalle">
      <h1><%= result.title%></h1>
      <p>DESCRIPCION: <%=result.short_description%></p>      
